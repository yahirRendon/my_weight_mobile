<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties-->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp"/>
            <gradient
                android:startColor="@color/colorCoralLight"
                android:centerColor="@color/colorCoralLight"
                android:centerY="1.0"
                android:endColor="@color/colorCoralLight"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp"/>
                <gradient
                    android:startColor="@color/colorSeafoam"
                    android:centerColor="@color/colorSeafoam"
                    android:centerY="1.0"
                    android:endColor="@color/colorSeafoam"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>