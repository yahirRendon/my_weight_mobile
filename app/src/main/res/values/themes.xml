<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Light application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorCoralLight</item>
        <item name="colorPrimaryVariant">@color/colorCoralDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorTeal</item>
        <item name="colorSecondaryVariant">@color/colorSeafoam</item>
        <item name="colorOnSecondary">@color/colorBlueDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize Font -->
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- Base Dark application theme. -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorCoralDark</item>
        <item name="colorPrimaryVariant">@color/colorTeal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorCoralDark</item>
        <item name="colorSecondaryVariant">@color/colorTeal</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize Font -->
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="android:textColorHint">@color/colorCoralDark</item>
        <item name="android:editTextColor">@color/white</item>

        <!-- Set background color-->
        <item name="android:background">@color/colorBlueDark</item>
        <item name="android:windowBackground">@color/colorBlueDark</item>
        <item name="android:colorBackground">@color/colorBlueDark</item>

    </style>

    <!-- Define custom progress bar-->
    <style name="ProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

</resources>